# Pinnacle AI Platform Environment Configuration
# Copy this file to .env and update with your actual values

# ========================================
# APPLICATION SETTINGS
# ========================================
APP_NAME=Pinnacle AI Platform
APP_VERSION=0.1.0
APP_ENV=development
DEBUG=True
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# ========================================
# DATABASE CONFIGURATION
# ========================================
DATABASE_URL=postgresql://pinnacle_user:pinnacle_password@localhost:5432/pinnacle_ai
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pinnacle_ai
DB_USER=pinnacle_user
DB_PASSWORD=pinnacle_password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# MongoDB Configuration (for document storage)
MONGODB_URL=mongodb://localhost:27017/pinnacle_ai
MONGODB_DATABASE=pinnacle_ai

# ========================================
# AI/ML CONFIGURATION
# ========================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Hugging Face Configuration
HUGGINGFACE_API_TOKEN=your_huggingface_token_here
HUGGINGFACE_MODEL_CACHE_DIR=./models/cache

# Model Configuration
MODEL_STORAGE_PATH=./models
MAX_MODEL_SIZE_GB=50
ENABLE_GPU=True
GPU_MEMORY_FRACTION=0.8

# ========================================
# E-COMMERCE CONFIGURATION
# ========================================
# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Shopify Configuration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
SHOPIFY_WEBHOOK_SECRET=your_shopify_webhook_secret

# ========================================
# INTEGRATION CONFIGURATION
# ========================================
# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=pinnacle-ai-storage

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=./config/google-credentials.json
GOOGLE_CLOUD_PROJECT=your-google-cloud-project
GOOGLE_CLOUD_STORAGE_BUCKET=pinnacle-ai-storage

# Azure Configuration
AZURE_STORAGE_ACCOUNT=your_azure_storage_account
AZURE_STORAGE_KEY=your_azure_storage_key
AZURE_CONTAINER_NAME=pinnacle-ai-container

# ========================================
# EMAIL & NOTIFICATION CONFIGURATION
# ========================================
# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
DEFAULT_FROM_EMAIL=noreply@pinnacle-ai.com
SUPPORT_EMAIL=support@pinnacle-ai.com

# SMTP Configuration (fallback)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_TLS=True

# ========================================
# SECURITY CONFIGURATION
# ========================================
JWT_SECRET_KEY=your_jwt_secret_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# OAuth2 Configuration
OAUTH2_CLIENT_ID=your_oauth2_client_id
OAUTH2_CLIENT_SECRET=your_oauth2_client_secret
OAUTH2_REDIRECT_URI=http://localhost:8000/auth/callback

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here
HASH_ALGORITHM=sha256

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://yourdomain.com

# ========================================
# MONITORING & LOGGING
# ========================================
# Sentry Configuration
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ENVIRONMENT=development

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/pinnacle_ai.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=10

# Prometheus Configuration
PROMETHEUS_GATEWAY=http://localhost:9091
METRICS_PORT=8001

# ========================================
# CACHE CONFIGURATION
# ========================================
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/1
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=pinnacle_ai

# ========================================
# CELERY CONFIGURATION
# ========================================
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3
CELERY_TIMEZONE=UTC
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_WORKER_PREFETCH_MULTIPLIER=1

# ========================================
# FILE STORAGE CONFIGURATION
# ========================================
UPLOAD_PATH=./uploads
MAX_UPLOAD_SIZE_MB=100
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,txt,csv,json,xml,jpg,jpeg,png,gif,webp,mp4,avi,mov,mp3,wav

# ========================================
# API CONFIGURATION
# ========================================
API_V1_PREFIX=/api/v1
API_TITLE=Pinnacle AI Platform API
API_DESCRIPTION=Comprehensive AI platform API with e-commerce and automation features
API_VERSION=1.0.0
API_DOCS_URL=/docs
API_REDOC_URL=/redoc

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ========================================
# DEVELOPMENT SETTINGS
# ========================================
HOT_RELOAD=True
DEBUG_TOOLBAR=True
SQL_DEBUG=False

# ========================================
# PRODUCTION SETTINGS
# ========================================
# Uncomment and configure for production
# APP_ENV=production
# DEBUG=False
# LOG_LEVEL=WARNING
# REDIS_URL=redis://redis:6379/0
# DATABASE_URL=postgresql://user:pass@db:5432/pinnacle_ai

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_AI_AGENTS=True
ENABLE_ECOMMERCE=True
ENABLE_DROPSHIPPING=True
ENABLE_ANALYTICS=True
ENABLE_MONITORING=True
ENABLE_CACHING=True

# ========================================
# TESTING CONFIGURATION
# ========================================
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/pinnacle_ai_test
TEST_REDIS_URL=redis://localhost:6379/4
TESTING=False

# ========================================
# BACKUP CONFIGURATION
# ========================================
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP=True
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# ========================================
# PERFORMANCE SETTINGS
# ========================================
WORKERS=4
THREADS=2
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30
READ_TIMEOUT=30

# ========================================
# CUSTOM CONFIGURATION
# ========================================
# Add your custom configuration variables here
CUSTOM_VAR_1=value1
CUSTOM_VAR_2=value2