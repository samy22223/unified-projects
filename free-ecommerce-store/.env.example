# WordPress Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_NAME=yourdomain_wp
DB_USER=yourdomain_user
DB_PASSWORD=your_secure_password
DB_CHARSET=utf8mb4
DB_COLLATE=

# WordPress Configuration
WP_DEBUG=false
WP_ENV=production
WP_HOME=https://yourdomain.com
WP_SITEURL=https://yourdomain.com

# Authentication Keys and Salts
# Generate unique keys from https://api.wordpress.org/secret-key/1.1/salt/
AUTH_KEY=put your unique phrase here
SECURE_AUTH_KEY=put your unique phrase here
LOGGED_IN_KEY=put your unique phrase here
NONCE_KEY=put your unique phrase here
AUTH_SALT=put your unique phrase here
SECURE_AUTH_SALT=put your unique phrase here
LOGGED_IN_SALT=put your unique phrase here
NONCE_SALT=put your unique phrase here

# Table Prefix
WP_TABLE_PREFIX=wp_

# Security Settings
DISALLOW_FILE_EDIT=true
DISALLOW_FILE_MODS=true
FORCE_SSL_ADMIN=true
WP_AUTO_UPDATE_CORE=true
WP_AUTO_UPDATE_PLUGIN=true
WP_AUTO_UPDATE_THEME=true

# Performance Settings
WP_POST_REVISIONS=3
AUTOSAVE_INTERVAL=300
WP_MEMORY_LIMIT=128M
WP_MAX_MEMORY_LIMIT=256M

# SMTP Configuration (if using SMTP plugin)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_ENCRYPTION=tls

# API Keys (for plugins)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
FACEBOOK_PIXEL_ID=your_pixel_id
MAILCHIMP_API_KEY=your_mailchimp_api_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_key
STRIPE_SECRET_KEY=sk_test_your_key

# Custom Configuration
CUSTOM_VAR_1=value1
CUSTOM_VAR_2=value2
